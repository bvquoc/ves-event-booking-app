# Nginx configuration for VES Booking Admin Portal
# Place this in /etc/nginx/sites-available/ves-admin-portal
# Then create symlink: sudo ln -s /etc/nginx/sites-available/ves-admin-portal /etc/nginx/sites-enabled/
#
# IMPORTANT: When using this config, set VITE_API_BASE_URL=/api in .env
# This allows API calls from user's browser to go through Nginx proxy

server {
    listen 80;
    server_name your-domain.com;  # Change to your domain or VPS IP address

    # Admin Portal (Frontend)
    location / {
        proxy_pass http://localhost:3000;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_cache_bypass $http_upgrade;
        
        # Handle React Router
        try_files $uri $uri/ /index.html;
    }

    # Backend API (if on same server)
    location /api {
        proxy_pass http://localhost:8080/api;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

